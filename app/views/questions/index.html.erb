<div class="container">
  <h2 class="title-lg mb">Вопросы</h2>

  <% @questions.each do |question| %>
    <% hidden = 'hidden' if question.hidden? %>
    <p class= "mb-sm"><%= link_to "Вопрос #{question.id}", question_path(question), class: hidden %></p>
  <% end %>

  <p class="mt">
    <%= link_to "Создать новый вопрос", new_question_path, class: 'button button-main' %>
  </p>
</div>
